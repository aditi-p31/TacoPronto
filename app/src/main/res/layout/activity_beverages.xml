<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.csulb.edu.tacopronto.beverages">
    <ImageView
        android:id="@+id/image_taco"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/tacos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taco Pronto"
        android:id="@+id/textView"
        android:layout_toRightOf="@+id/image_taco"
        android:layout_alignTop="@+id/image_taco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Euclid Ave."
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/image_taco"
        android:layout_toEndOf="@+id/image_taco"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1(551)242-5898"
        android:id="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/image_taco"
        android:layout_toEndOf="@+id/image_taco"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Beverages"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:textAlignment="center"
        android:singleLine="false"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/image_taco"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next "
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="34dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tequila"
        android:id="@+id/checkBox_tequila"
        android:checked="false"
        android:layout_below="@+id/checkBox_margarita"
        android:layout_alignLeft="@+id/checkBox_margarita"
        android:layout_alignStart="@+id/checkBox_margarita" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soda"
        android:id="@+id/checkBox_soda"
        android:checked="false"
        android:layout_above="@+id/checkBox_tequila"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerveza"
        android:id="@+id/checkBox_cerveza"
        android:layout_alignTop="@+id/checkBox_tequila"
        android:layout_alignLeft="@+id/checkBox_soda"
        android:layout_alignStart="@+id/checkBox_soda"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Margarita"
        android:id="@+id/checkBox_margarita"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:checked="false" />

</RelativeLayout>
